<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo50"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnMeusDados"
        android:background="@drawable/botao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meus Dados"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/btnComplemento"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnComplemento"
        android:background="@drawable/botao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados Complementares"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/btnExcluirUsuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnExcluirUsuario"
        android:background="@drawable/botao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excluir Usuario"
        android:layout_marginTop="40dp"
        android:layout_above="@+id/btnVoltar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnVoltar"
        android:background="@drawable/botaodestaque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:text="Voltar" />


</RelativeLayout>