<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Perfil do UsuÃ¡rio"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editRaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="RA"
        android:inputType="number" />

    <EditText
        android:id="@+id/editNomeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editRaId"
        android:layout_alignStart="@+id/editRaId"
        android:layout_below="@+id/editRaId"
        android:ems="10"
        android:hint="Nome Completo"
        android:inputType="textPersonName" />

    <ListView
        android:id="@+id/listaCursosId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/editNomeId"
        android:layout_alignStart="@+id/editNomeId"
        android:layout_below="@+id/editNomeId"
        android:foregroundTint="#000000" />

</RelativeLayout>
